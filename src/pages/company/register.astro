---
import ContactForm from '../../components/forms/Register.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@odyssey-theme/components';

const seo = {
	title: 'Contact | LCOY UAE',
	description: 'Contact Page',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Registration</h1>
				<p>
					Sign up to receive a notification when registrations are open! Once we're open - choose the events you'd like to go to, add your name and email, and you're all set to attend LCOY UAE.
				</p>
				<div>
					<p>
						 <em
							><a href="mailto:admin@lcoy.ae">admin@lcoy.ae</a
							></em
						>
					</p>
				</div>
			</div>
			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
	}
</style>
